{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}
  <!-- 🧭 Top Menu -->
    <nav>
        <a href="#">Home</a>
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Contact</a>
    </nav>

    <!-- 🏞️ Header Banner -->
    <header>
        <h1>Welcome to {{ companyName|default('Your Startup') }}</h1>
        <p>Innovating the future, one idea at a time.</p>
    </header>
<!-- 🎞️ Image Slider -->
    <div class="slider">
        <div class="slide"><img src="{{ asset('images/circuit_diagram.jpeg') }}" alt="Slide 1"></div>
        <div class="slide"><img src="{{ asset('images/cpu.jpeg') }}" alt="Slide 2"></div>
        <div class="slide"><img src="{{ asset('images/deskpip.jpg') }}" alt="Slide 3"></div>
    </div>

    <!-- 📦 Body Content Cards -->
    <section class="cards">
        <div class="card">
            <h3>Our Mission</h3>
            <p>We aim to revolutionize the tech landscape with bold ideas and smart execution.</p>
        </div>
        <div class="card">
            <h3>Our Team</h3>
            <p>Meet the passionate minds driving innovation and delivering excellence.</p>
        </div>
        <div class="card">
            <h3>Get Involved</h3>
            <p>Join us on our journey—whether as a partner, customer, or team member.</p>
        </div>
    </section>

    <!-- 🧱 Footer -->
    <footer>
        <p>&copy; {{ "now"|date("Y") }} {{ companyName|default('Your Startup') }}. All rights reserved.</p>
        <p>
            <a href="#">Privacy</a> |
            <a href="#">Terms</a> |
            <a href="#">Support</a>
        </p>
    </footer>


{% endblock %}
